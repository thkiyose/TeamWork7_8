  <!-- Page Header -->
  <header class="masthead" style="background-image: url('assets/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
            <p><%= link_to '投稿する', new_blog_path, class:"btn btn-primary" %></p>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% @blogs.each do |blog| %>
          <div class="post-preview">
              <h2 class="post-title"><%= blog.title %></h2>
              <h3>
                <%= blog.content %>
              </h3>
            <p class="post-meta">投稿者：<%= blog.user.name %></p>
              <%= link_to '詳細', blog %>
              <%= link_to '編集', edit_blog_path(blog) %>
              <%= link_to '削除', blog, method: :delete, data: { confirm: '本当に削除していいですか？' } %>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
